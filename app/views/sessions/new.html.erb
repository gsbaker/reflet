<%= render "header" %>

<div class="container-small">
  <div class="vstack">
    <%= render "shared/auth_logo" %>

    <h1>Sign in</h1>

    <%= form_with url: session_path, class: "vstack" do |form| %>
      <div>
        <%= form.label :email %>
        <%= form.email_field :email %>
      </div>

      <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
      </div>

      <div>
        <%= form.submit "Continue", class: "btn" %>
      </div>

      <div>
        <%= link_to "Forgot your password?", new_password_reset_path %>
      </div>
    <% end %>
  </div>
</div>
