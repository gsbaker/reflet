<div class="container-small vstack">
  <div class="text-center">
    <%= render "shared/auth_logo" %>
  </div>

  <div class="card">
  <%= form_with url: session_path, class: "vstack" do |form| %>
    <div class="text-center text-secondary">
      <p>Sign in to Reflet</p>
    </div>
    <div>
      <%= form.email_field :email, placeholder: "Email", required: true %>
    </div>

    <div>
      <%= form.password_field :password, placeholder: "Password", required: true %>
    </div>

    <div class="vstack text-center">
      <div>
      <%= form.submit "Sign in", class: "btn btn--block" %>
      </div>
      <div>
        <%= link_to "Or, sign up", new_registration_path, class: "btn btn--secondary btn--block" %>
      </div>
      <div>
        <%= link_to "Forgot your password?", new_password_reset_path, class: "text-secondary" %>
      </div>
    </div>
  <% end %>
  </div>
</div>
