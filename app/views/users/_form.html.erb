<div class="vstack">
  <div>
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    <% end %>
  </div>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :email %>
  <%= f.email_field :email %>
</div>

<div>
  <%= f.submit "Update", class: "btn" %>
</div>
</div>
