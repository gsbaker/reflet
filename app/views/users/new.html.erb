<div id="clearance" class="sign-up container" style="max-width: 600px;">

  <h2><%= t(".title") %></h2>

  <%= form_for @user do |form| %>
    <%= render partial: 'users/form', object: form %>

    <div class="submit-field mt-3">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <div class="other-links mt-5">
      <p class="form-label">Already signed up?</p>
      <%= link_to t(".sign_in"), sign_in_path %>
    </div>
  <% end %>
</div>