<%= turbo_frame_tag "needs-record", class: "vstack" do %>
  <% if @needs_record.completed? %>
    <%= render "completed" %>
  <% else %>
    <h1><%= @needs_record %></h1>
    <div class="card">
      <h2><%= @rating.need %></h2>
      <%= render "need_ratings/form" %>
    </div>
  <% end %>
<% end %>
