<div class="container-small">
<h1>Reset your password</h1>

<%= form_with model: current_user, url: password_reset_path do |form| %>
  <div class="v-stack">
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, class: "input__text" %>
    </div>

    <div>
      <%= form.submit "Continue", class: "btn" %>
    </div>
  </div>
<% end %>
</div>
