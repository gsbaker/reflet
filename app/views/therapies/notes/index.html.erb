<div class="action-header">
  <div>
  <h1>Notes</h1>
  </div>
  <div>
    <%= link_to "Create a note", new_therapy_note_path(@therapy), class: "btn" %>
  </div>
</div>
<div>
  <% if @therapy.notes.any? %>
    <div class="card">
      <% @therapy.notes.each do |note| %>
        <p><%= link_to note.title, therapy_note_path(@therapy, note) %></p>
      <% end %>
    </div>
  <% end %>
</div>
