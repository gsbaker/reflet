<h1>Needs Records</h1>

<% if @needs_records.any? %>
  <div class="card">
    <% @needs_records.each do |needs_record| %>
      <p><%= link_to needs_record, path_for_needs_record(current_user, needs_record) %></p>
    <% end %>
  </div>
<% else %>
  <p><%= @therapy.client %> has not shared any needs records.</p>
<% end %>
